<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tomcatArchitecture.dao.GoodsDao">

    <resultMap type="tomcatArchitecture.entity.Goods" id="GoodsMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="barcode" column="barcode" jdbcType="VARCHAR"/>
        <result property="goodsname" column="goodsName" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="OTHER"/>
        <result property="brand" column="brand" jdbcType="VARCHAR"/>
        <result property="supplier" column="supplier" jdbcType="VARCHAR"/>
        <result property="standard" column="standard" jdbcType="VARCHAR"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsMap">
        select
          id, barcode, goodsName, price, brand, supplier, standard, num, type
        from one.goods
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GoodsMap">
        select
          id, barcode, goodsName, price, brand, supplier, standard, num, type
        from one.goods
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GoodsMap">
        select
          id, barcode, goodsName, price, brand, supplier, standard, num, type
        from one.goods
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="barcode != null and barcode != ''">
                and barcode = #{barcode}
            </if>
            <if test="goodsname != null and goodsname != ''">
                and goodsName = #{goodsname}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="brand != null and brand != ''">
                and brand = #{brand}
            </if>
            <if test="supplier != null and supplier != ''">
                and supplier = #{supplier}
            </if>
            <if test="standard != null and standard != ''">
                and standard = #{standard}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into one.goods(price, brand, supplier, standard, num, type)
        values (#{price}, #{brand}, #{supplier}, #{standard}, #{num}, #{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update one.goods
        <set>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="brand != null and brand != ''">
                brand = #{brand},
            </if>
            <if test="supplier != null and supplier != ''">
                supplier = #{supplier},
            </if>
            <if test="standard != null and standard != ''">
                standard = #{standard},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from one.goods where id = #{id}
    </delete>

</mapper>